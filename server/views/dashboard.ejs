                        <div class="col-md-4">
                            <label class="form-label small text-muted">Turno Tarde</label>
                            <input type="text" name="office_afternoon" class="form-control" value="<%= data.office_afternoon %>">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label small text-muted">Hora de Comida</label>
                            <input type="text" name="office_lunch" class="form-control" value="<%= data.office_lunch %>">
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2">

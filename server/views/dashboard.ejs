        <form action="/admin/update" method="POST">
            
            <div class="card mb-4 shadow border-0">
                <div class="card-header bg-white border-bottom fw-bold text-success">
                    ‚õΩ Precios de Combustible
                </div>
                <div class="card-body bg-white">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label fw-bold text-success">Magna (Verde)</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" step="0.01" name="magna" class="form-control form-control-lg fw-bold" value="<%= data.prices.magna %>">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold text-danger">Premium (Roja)</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" step="0.01" name="premium" class="form-control form-control-lg fw-bold" value="<%= data.prices.premium %>">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold text-dark">Di√©sel (Negra)</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
